= cache_if(current_user.nil?) do
  %nav{class: 'navbar navbar-default navbar-static-top', style: 'margin-bottom: 0px;', role: 'navigation'}
    .navbar-header
      = link_to Rails.application.config.event_name, root_path, class: 'navbar-brand'
    %p.navbar-text.navbar-left#clock{style: 'margin-right: 5px;'}
    %ul.nav.navbar-top-links.navbar-right
      - if is_admin?
        %li.dropdown
          %a{href: '#', class: 'dropdown-toggle', 'data-toggle':'dropdown'}
            %i.fa.fa-lock
            Admin
            %i.fa.fa-caret-down
          %ul.dropdown-menu.dropdown-user
            %li
              = link_to 'Alle artikler', pages_path
            %li
              = link_to 'Alle lag', teams_path
            %li
              = link_to 'Alle brukere', users_path
      - if current_user && current_user.competitions.any?
        %li.dropdown
          %a{href: '#', class: 'dropdown-toggle', 'data-toggle':'dropdown'}
            %i.fa.fa-trophy
            = "Mine konkurranser"
            %i.fa.fa-caret-down
          %ul.dropdown-menu.dropdown-user
            - current_user.teams.each do |t|
              - t.competitions.each do |c|
                %li
                  = link_to "#{c.name}: #{t.name}", c

      - if !current_user.nil?
        %li.dropdown
          %a{href: '#', class: 'dropdown-toggle', 'data-toggle':'dropdown'}
            %i.fa.fa-group
            = "Mine lag"
            %i.fa.fa-caret-down
          %ul.dropdown-menu.dropdown-user
            %li
              = link_to 'Nytt lag', new_team_path
            %li.divider
            - current_user.teams.each do |t|
              %li
                = link_to t.name, t
      %li.dropdown
        - if !current_user.nil?
          %a{href: '#', class: 'dropdown-toggle', 'data-toggle':'dropdown'}
            %i.fa.fa-user
            = current_user.username
            %i.fa.fa-caret-down
          %ul.dropdown-menu.dropdown-user
            %li
              = link_to 'Rediger bruker', edit_user_path(current_user)
            %li
              = link_to 'Logg ut', logg_ut_path
        - else
          = link_to 'Logg inn', logg_inn_path
    = cache(Page.front_page.count) do
      .navbar-default.sidebar{role: 'navigation'}
        .sidebar-nav.navbar-collapse
          %ul.nav#side-menu
            %li
              %a
                = "Pålogget nå: #{User.online.length}"
            %li{class: ('active' if controller_name == 'pages' || controller_name == 'site')}
              %a{href:'#'}
                Informasjon
                %span.fa.arrow
              %ul.nav.nav-second-level.collapse
                - Page.all{|p| p.main_menu}.order(:title).each do |p|
                  - if p.main_menu
                    %li
                      = link_to p.title, "/"+p.titledash
            %li{class: ('active' if (controller_name == 'competitions' || controller_name == 'file_competitions'))}
              %a{href:'#'}
                Konkurranser
                %span.fa.arrow
              %ul.nav.nav-second-level.collapse
                - Competition.order(:name).each do |c|
                  %li
                    = link_to c.name, c
                - FileCompetition.all.each do |f|
                  %li
                    = link_to f.name, f
              %li{class: ('active' if action_name == 'irc')}
                = link_to 'Chat - IRC', chat_path
