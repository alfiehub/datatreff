%ul{class: "nav nav-tabs nav-justified", id: 'nav'}
  %li{class: ('active' if (controller_name == 'site' && action_name != 'irc'))}
    = link_to "Hjem", root_path

  %li{class: ('dropdown active' if controller_name == 'pages')}
    %a{class: "dropdown-toggle", "data-toggle":"dropdown", "href":"#", role: "button", "aria-haspopup":"true"}
      Informasjon
      %span{class: "caret"}
    %ul{class: "dropdown-menu"}
      - if is_admin?
        %li
          = link_to 'Alle artikler', pages_path
        %li
          = link_to 'Ny artikkel', new_page_path
        %li{class: "divider", "role":"separator"}
      - Page.all{|p| p.main_menu}.order(:title).each do |p|
        - if p.main_menu
          %li
            = link_to p.title, "/"+p.title


  %li{class: ((controller_name == 'competitions' || controller_name == 'file_competitions' || controller_name == 'teams') ? "dropdown active" : "dropdown")}
    %a{class: "dropdown-toggle", "data-toggle":"dropdown", "href":"#", role: "button", "aria-haspopup":"true"}
      Konkurranser
      %span{class: "caret"}
    %ul{class: "dropdown-menu"}

      - if is_admin?
        %li{class: "dropdown-header"} Ny konkurranse
        %li= link_to 'Ny lagkonkurranse', new_competition_path
        %li= link_to 'Ny filkonkurranse', new_file_competition_path
        %li{class: "divider", "role":"separator"}

      - if !current_user.nil?
        %li= link_to "Mine lag", teams_path, id: 'bold'
        %li{class: "divider", "role":"separator"}

      - Competition.all.order(:name).each do |c|
        %li= link_to c.name, c

      %li{class: "divider", "role":"separator"}

      - FileCompetition.all.order(:name).each do |c|
        %li= link_to c.name, c
  %li{class: ('active' if action_name == 'irc')}
    = link_to 'Chat - IRC', chat_path

  - if current_user.nil?
    %li{class: ('active' if controller_name == 'sessions')}
      = link_to "Logg inn", logg_inn_path
  - else
    %li{class: controller_name == 'users' ? 'dropdown active' : 'dropdown'}
      %a{class: "dropdown-toggle", "data-toggle":"dropdown", "href":"#", role: "button", "aria-haspopup":"true"}
        Personlig
        %span{class: "caret"}
      %ul{class: "dropdown-menu"}
        - if is_admin?
          %li{class: "dropdown-header"} Crew only
          %li= link_to "Alle brukere", users_path
          %li{role: "separator", class: "divider"}
        %li
          = link_to "Endre bruker", edit_user_path(current_user)
        %li
          = link_to "Logg ut", logg_ut_path
