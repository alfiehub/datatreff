%ul{class: "nav nav-tabs nav-justified"}
  %li
    = link_to "Hjem", root_path

  %li{class: "dropdown"}
    %a{class: "dropdown-toggle", "data-toggle":"dropdown", "href":"#", role: "button", "aria-haspopup":"true"}
      Informasjon
      %span{class: "caret"}
    %ul{class: "dropdown-menu"}
      - Page.all{|p| p.main_menu}.each do |p|
        %li
          = link_to p.title, p

  - if !current_user.nil?
    %li
      = link_to "Mine lag", teams_path
  %li{class: "dropdown"}
    %a{class: "dropdown-toggle", "data-toggle":"dropdown", "href":"#", role: "button", "aria-haspopup":"true"}
      Konkurranser
      %span{class: "caret"}
    %ul{class: "dropdown-menu"}
      - Competition.all.each do |c|
        %li
          = link_to c.name, c
  %li
    - if current_user.nil?
      = link_to "Logg inn", logg_inn_path
    - else
      = link_to "Logg ut", logg_ut_path
