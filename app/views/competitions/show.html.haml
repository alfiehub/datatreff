%h2
  = @competition.name
.col-md-6
  %h3
    Lag påmeldt
  %table.table
    %thead
      %th Lagnavn
      %th Brukernavn
      %th Navn
      %th Mobilnummer
    - @competition.teams.each do |t|
      %tr
        %td
          = t.name
        %td
          = t.users.first.username
        %td
          = t.users.first.name
        %td
          = t.users.first.mobile
        - if current_user == t.users.first
          %td
            = link_to 'x', CompetitionTeam.find_by_team_id_and_competition_id(t.id, @competition.id), method: :delete

  - if !current_user.nil?
    = semantic_form_for @competition do |f|
      = f.inputs :name do
        = f.input :teams, label: "Mine lag", as: :select, collection: current_user.teams.select{|t| !@competition.teams.include?(t)}
      = f.actions do
        = f.action :submit, label: "Meld på", as: :button


.col-md-6
  %h3
    Kontaktinformasjon
  %table.table
    %thead
      %th Navn
      %th Mobilnummer
      %th Start
    %tr
      %td
        = @competition.admin_name
      %td
        = @competition.admin_mobile
      %td
        = I18n.l @competition.start_time
  - if is_admin?
    = link_to 'Start konkurranse', start_competition_path
