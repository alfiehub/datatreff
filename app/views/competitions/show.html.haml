%h2
  = @competition.name
.col-md-6
  %h3
    Lag meldt p√•
  %table.table
    - @competition.teams.each do |t|
      %tr
        %td
          = t.name
        %td
          = t.users.first.username
        %td
          = t.users.first.name
        %td
          = t.users.first.mobile
        - if current_user == t.users.first
          %td
            = link_to 'x'
  = semantic_form_for @competition do |f|
    = f.inputs :name do
      = f.input :teams, as: :select, collection: current_user.teams.select{|t| !@competition.teams.include?(t)}
    = f.actions do
      = f.action :submit, as: :button
  = semantic_form_for @competition, method: 'delete' do |f|
    = f.inputs :name do
      = f.input :teams, as: :select, collection: current_user.teams.select{|t| @competition.teams.include?(t)}
    = f.actions do
      = f.action :submit
.col-md-6
  %table.table
    %thead
      %th Admin
      %th Mobilnummer
      %th Start
    %tr
      %td
        = @competition.admin_name
      %td
        = @competition.admin_mobile
      %td
        = I18n.l @competition.start_time
