.col-md-5
  %h2.page-header
    = @team.name
    - if is_admin? || @team.users.include?(current_user)
      %span{class: "label label-primary"}
        = link_to "Endre", edit_team_path(@team),{style: "color:white;"}
  %table{class: 'table table-striped table-hover'}
    %thead
      %th
        Brukernavn
      - if is_admin? || @team.users.include?(current_user)
        %th
          Navn
    - @team.ordered_users.each do |u|
      %tr
        %td
          = u.username
        - if is_admin? || @team.users.include?(current_user)
          %td
            = u.name
          %td
            = link_to 'x', user_team_path(UserTeam.find_by_team_id_and_user_id(@team.id, u.id)), method: :delete

  - if is_admin? || @team.users.include?(current_user)
    = semantic_form_for @team do |f|
      = f.inputs :name do
        = f.input :username, as: :string, placeholder: 'Brukernavnet som skal legges til', label: 'Brukernavn'
      = f.actions do
        = f.action :submit, label: "Legg til bruker"
  - if @team.competitions.any?
    %h3
      Dette laget deltar i
    - @team.competitions.each do |c|
      %p
        = link_to c.name, c
