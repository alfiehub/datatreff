.form.center-block.well.bs-component
  = semantic_form_for [@competition, @result] do |f|
    = f.inputs :name => "Resultat" do
      = f.input :team1_id, label: "Lag 1",  as: :select, collection: @competition.teams.order(:name)
      = f.input :team2_id, label: "Lag 2", as: :select, collection: @competition.teams.order(:name)
      = f.input :team1_score, label: "Lag 1 poeng"
      = f.input :team2_score, label: "Lag 2 poeng"
      = f.input :screenshots, label: "Screenshot(s). Ett eller fler.", as: :file, input_html: {style: 'color: white;', multiple: true}
    = f.actions do
      = f.action :submit, label: "Send inn"
