.row
  .col-md-6
    .form.center-block.well.bs-component
      = semantic_form_for @result do |f|
        = f.inputs :name => "Resultat" do
          = f.input :team1_id, as: :select, collection: @competition.teams.order(:name)
          = f.input :team2_id, as: :select, collection: @competition.teams.order(:name)
          = f.input :team1_score
          = f.input :team2_score
          = f.input :competition_id, as: :hidden, input_html: { value: @competition.id, style: 'color: white;'}

          - if is_admin?
            = f.input :round
            = f.input :match
            = f.input :lower_bracket, as: :select
            = f.input :validated, as: :select
          = f.input :image, label: "Result", input_html: {style: 'color: white;'}
        = f.actions do
          = f.action :submit, label: "Oppdater resultat"
  .col-md-6
    %h3 Screenshot
    = link_to image_tag(@result.image.url(:medium)), @result.image.url
